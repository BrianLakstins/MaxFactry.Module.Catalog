@model MaxFactry.Module.Catalog.PresentationLayer.MaxProductFileViewModel


@if (!ViewData.ModelState.IsValid)
{
    <div class="row">
        <div class="col-sm-12">
            <p class="bg-warning text-center lead">There were errors.  Please review and fix them below.</p>
        </div>
    </div>
    <div class="row" style="padding-bottom: 15px">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            @Html.ValidationSummary(false, "There were errors", htmlAttributes: new { Class = "bg-danger" })
        </div>
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <fieldset>
        <legend>Send File (@Model.Name)</legend>
        <div class="form-group">
            <label class="sr-only" for="udEmail">Email</label>
            <input type="text" name="uoEmail" id="udEmail" class="form-control" placeholder="user@domain.com" value="@ViewBag.EmailAddress" />
        </div>
        <div class="form-group">
            <button type="submit" name="uoProcess" value="sendfile" class="btn btn-primary">Send File</button>
        </div>

    </fieldset>
}

