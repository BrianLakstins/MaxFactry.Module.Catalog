@model MaxFactry.Module.Catalog.PresentationLayer.MaxOrderShippingAddressViewModel

@if (!string.IsNullOrEmpty(Model.Company))
{ 
<div class="row">
    <label class="col-sm-2 control-label">Company</label>
    <div class="col-sm-5 col-md-5 col-lg-4">
        <p class="form-control-static" id="@Html.MaxIdFor(m => m.Company)">@Model.Company</p>
    </div>
</div>
}
<div class="row">
    <label class="col-sm-2 control-label">Attention</label>
    <div class="col-sm-5 col-md-5 col-lg-4">
        <p class="form-control-static" id="@Html.MaxIdFor(m => m.Attention)">@Model.Attention</p>
    </div>
</div>
<div class="row">
    <label class="col-sm-2 control-label">Address</label>
    <div class="col-sm-5 col-md-5 col-lg-4">
        <p class="form-control-static" id="@Html.MaxIdFor(m => m.DeliveryAddress)">@Model.DeliveryAddress</p>
    </div>
</div>
<div class="row">
    <label class="col-sm-2 control-label">&nbsp;</label>
    <div class="col-sm-5 col-md-5 col-lg-4">
        <p class="form-control-static" id="@Html.MaxIdFor(m => m.City)">@Model.City, @Model.StateCode @Model.PostalCode</p>
    </div>
</div>